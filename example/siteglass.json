{
    "global": {
        "encoding": "utf-8",
        "cache_bust": {
            "enabled": true,
            "versioning": {
                "method": "hash",
                "rewrite": "dist/*.html"
            }
        }
    },
    
    "copy": {
        "src": "dist"
    },
    
    "amd": [{
        "source": "dist/js/main.js",
        "target": "dist/js/main.min.js"
    }],
    
    "css": [{
        "source": "dist/css/main.css",
        "target": "dist/css/main.min.css",
        "resolve_imports": true,
        "inline_assets": true,
        "paths_relative_to": "source"
    }],
    
    "images": [
        {
            "source": [
                "dist/images/*.png",
                "dist/images/*.jpg"
            ]
        }
    ]
}