{
    "global": {
        "encoding": "utf-8",
        "overwrite": false,
        "cache_bust": {
            "enabled": true,
            "versioning": {
                "method": "file",
                "filename": "version"
            }
        }
    },
    
    "js": [{
        "source": "src/js/*.js",
        "target": "dist/js/compressed.js"
    }],
    
    "amd": [{
        "source": "src/js/main.js",
        "target": "dist/js/main.min.js"
    }],
    
    "css": [{
        "source": "src/css/main.css",
        "target": "dist/css/main.min.css",
        "resolve_imports": true,
        "inline_assets": true,
        "paths_relative_to": "source"
    }],
    
    "images": [
        {
            "source": [
                "src/images/*.png",
                "src/images/*.jpg"
            ]
        }
    ]
}